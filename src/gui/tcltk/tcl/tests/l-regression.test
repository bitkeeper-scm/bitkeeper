test typecheck-1.0 {typechecker segfaults on unop check that must be queued} -body {
#lang L
typecheck_1_0() {
	// note the -
	foo(-bar());
}
int bar() {
	return 22;
}
string foo(string foo) {
	return foo;
}
#lang tcl
typecheck_1_0
} -returnCodes {error} -match glob -result \
    "*:3: L Error: type error, want L_TYPE_STRING, got L_TYPE_INT\n"

